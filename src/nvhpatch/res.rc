#define LANG_NEUTRAL 0x00
#define LANG_ENGLISH 0x09
#define LANG_RUSSIAN 0x19

#define SUBLANG_NEUTRAL     0x00    // language neutral
#define SUBLANG_DEFAULT     0x01    // user default
