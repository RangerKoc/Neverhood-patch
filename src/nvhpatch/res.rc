#define VS_VERSION_INFO 1

#define VERSIONINFO_CompanyName      "konst_s"
#define VERSIONINFO_LegalCopyright   "© 2018, konst_s"

#define VERSIONINFO_ProductName      "Neverhood patch"

#define VERSIONINFO_Comments         "https://github.com/RangerKoc/Neverhood-patch"

#define VERSIONINFO_FileDescription  "patch for Neverhood"
#define VERSIONINFO_OriginalFilename "nvhpatch.dll"

#define VERSIONINFO_ProductVersion   "1.1"
#define VERSIONINFO_FileVersion      "1.1"

#define VERSIONINFO_ProductVersionNumber   1,1,0,0
